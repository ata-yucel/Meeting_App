@model UserInfo

@{
    ViewBag.Title="Basvuru Durumu";
}
<main class="text-center">
<h1 class="h4">Basvuru Durumu</h1>


@if(Model.WillAttend==true){

<p>Tesekkurler @Model.Name, Toplantiya sizinli birlikte @ViewBag.UserCount kisi katiliyor</p>
<a class="btn btn-sm btn-outline-primary" href="/meeting/list">Katilimcilari listele</a>
}
else{
    <p>@Model.Name, katilamadiginiz icin uzgunuz</p>
    <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Basvuru Formu</a>
}

</main>