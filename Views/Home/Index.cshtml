@model MeetingInfo
@{
    ViewBag.Title = "Toplanti Basvuru";
    Layout = "_Layout2";
}
<main class="text-center">

    <h1 class=h4>@ViewData["selamlama"], @ViewData["Username"]</h1>
    <h2>Toplanti katilim durumunuzu bildiriniz.</h2>
    <div class="card my-2">
        <ul class="list group list-group-flush">
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss ") tarihinde gerceklesecektir</li>
            <li class="list-group-item">Katilimci sayisi @ViewBag.UserCount</li>
        </ul>
    </div>
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Basvuru Yap</a>
</main>